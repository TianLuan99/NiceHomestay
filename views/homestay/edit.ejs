<% layout('/layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Homestay</h1>
    <div class="col-6 offset-3">
        <form class="validated-form" action="/homestay/<%= homestay._id%>?_method=PUT" method="POST" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="homestay[title]" value="<%= homestay.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="homestay[location]" value="<%= homestay.location%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Homestay Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="homestay[price]" value="<%= homestay.price%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="homestay[description]" required><%= homestay.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Add more image(s)...</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                </div>
            </div>
            

            <div class="mb-3">
                <label class="form-label" for="description">Please choose the image(s) you want to delete:</label>
                <% homestay.image.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <% })%>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Homestay</button>
            </div>
            
            </form>
        <div>
            <a href="/homestay/<%= homestay._id%>">Back To Homestay</a>
        </div> 
    </div>
</div> 