<% layout('/layouts/boilerplate') %> 
<h1>All Homestay</h1>
<div>
    <a href="/homestay/new">Add Homestay</a>
</div>
<ul>
    <% for(let h of homestay){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=h.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=h.title%></h5>
                        <p class="card-text"><%=h.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=h.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/homestay/<%=h.id%>">View <%=h.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% }%>  
</ul>
<% layout('/layouts/boilerplate') %> 